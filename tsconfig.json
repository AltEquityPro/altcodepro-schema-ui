{
    "compilerOptions": {
        "target": "ES2020",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        },
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node",
            "react",
            "react-dom"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}